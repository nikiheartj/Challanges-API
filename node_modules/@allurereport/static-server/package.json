{
  "name": "@allurereport/static-server",
  "version": "3.0.0-beta.9",
  "description": "Minimalistic web-server for serving static files",
  "keywords": [
    "allure",
    "testing",
    "web",
    "http",
    "server"
  ],
  "repository": "https://github.com/allure-framework/allure3",
  "license": "Apache-2.0",
  "author": "Qameta Software",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run clean && tsc --project ./tsconfig.json",
    "clean": "rimraf ./dist",
    "pretest": "rimraf ./out",
    "test": "run-p 'test:*'",
    "test:unit": "vitest run",
    "eslint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "eslint:format": "eslint --fix ./src/**/*.{js,jsx,ts,tsx}",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@allurereport/directory-watcher": "3.0.0-beta.9",
    "@allurereport/web-commons": "3.0.0-beta.9",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@stylistic/eslint-plugin": "^2.6.1",
    "@types/eslint": "^8.56.11",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/runner": "^2.1.8",
    "@vitest/snapshot": "^2.1.8",
    "allure-js-commons": "^3.0.9",
    "allure-playwright": "^3.0.9",
    "allure-vitest": "^3.0.9",
    "axios": "^1.7.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^50.0.0",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "get-port": "^7.1.0",
    "npm-run-all2": "^7.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}